<!DOCTYPE html>
<html>
  <%- include('../structure/head') %>
  <body>

    <!-- NavBar -->
    <%- include('../structure/nav') %>
    <!-- /END NavBar -->
    <div class="container">
      
      <div class="px-4 py-5 my-5 text-center">
        <div class="col-md-6 mx-auto">
          <%- include('../structure/messages') %>
        </div>
        <h1 class="display-5 fw-bold pb-3">Log In</h1>
        <div class="col-lg-3 mx-auto">
          <form action="/users/login" method="POST">
            <div class="mb-2">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Email" <%if(!!locals.user && !!locals.user.email){%>value="<%=user.email%>"<%}%> required>
            </div>
            <div class="mb-2">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-rick mt-2">Log In</button>
          </form>
        </div>
      </div>


      <!-- Footer -->
      <%- include('../structure/footer') %>
      <!-- /END Footer-->
    </div>


    <%- include('../structure/plugins') %>
    

  </body>

</html>